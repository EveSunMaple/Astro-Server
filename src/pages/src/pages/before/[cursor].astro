---
import Layout from '../../layouts/Layout.astro'; // 使用您自己的 Layout 文件路径
import List from '../../components/List.astro';
import { getChannelInfo } from '../../lib/telegram';

const cursor = Astro.params.cursor;
const channel = await getChannelInfo(Astro, { before: cursor });

// 设置 SEO，避免搜索引擎索引分页页面
channel.seo = {
  noindex: true,
};
---

<Layout title="历史消息" description="查看更早的消息">
  <List channel={channel} after={false} />
</Layout>